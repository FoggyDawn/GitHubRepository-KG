{
  "@context": {
    "rdf": "http://www.w3.org/1999/02/22-rdf-syntax-ns#",
    "rdfs": "http://www.w3.org/2000/01/rdf-schema#",
    "xsd": "http://www.w3.org/2001/XMLSchema#",
    "cnSchema": "http://cnschema.org/",
    "kg": "https://github.com/FoggyDawn/GitHubRepository-KG"
  },

  "classes": [
    {
      "id": "cnSchema:Thing",
      "label": "事物",
      "description": "所有实体的顶层概念"
    },

    {
      "id": "cnSchema:CreativeWork",
      "label": "创作作品",
      "subClassOf": "cnSchema:Thing"
    },

    {
      "id": "cnSchema:Software",
      "label": "软件",
      "subClassOf": "cnSchema:CreativeWork"
    },

    {
      "id": "kg:GitHubRepository",
      "label": "GitHub 仓库",
      "subClassOf": "cnSchema:Software",
      "description": "托管在 GitHub 平台上的开源或闭源软件仓库"
    },

    {
      "id": "cnSchema:Person",
      "label": "人物",
      "subClassOf": "cnSchema:Thing"
    },

    {
      "id": "cnSchema:Organization",
      "label": "组织",
      "subClassOf": "cnSchema:Thing"
    },

    {
      "id": "cnSchema:TechTerm",
      "label": "技术术语",
      "subClassOf": "cnSchema:Thing"
    },

    {
      "id": "kg:ProgrammingLanguage",
      "label": "编程语言",
      "subClassOf": "cnSchema:TechTerm",
      "description": "用于软件开发的编程语言，如 Python、C++ 等"
    },

    {
      "id": "cnSchema:Event",
      "label": "事件",
      "subClassOf": "cnSchema:Thing"
    },

    {
      "id": "kg:SoftwareRelease",
      "label": "软件版本发布",
      "subClassOf": "cnSchema:Event",
      "description": "软件在特定时间点发布的版本（如 v1.0、v2.1）"
    }
  ],

  "properties": [
    {
      "id": "cnSchema:developedBy",
      "label": "开发者",
      "domain": "cnSchema:Software",
      "range": ["cnSchema:Person", "cnSchema:Organization"],
      "description": "软件的开发者或开发组织",
      "source": "cnSchema"
    },

    {
      "id": "kg:writtenIn",
      "label": "使用语言",
      "domain": "cnSchema:Software",
      "range": "kg:ProgrammingLanguage",
      "description": "软件主要使用的编程语言",
      "source": "extension"
    },

    {
      "id": "cnSchema:usesTechnology",
      "label": "使用技术",
      "domain": "cnSchema:Software",
      "range": "cnSchema:TechTerm",
      "description": "软件使用的相关技术或框架",
      "source": "cnSchema"
    },

    {
      "id": "kg:hostedOn",
      "label": "托管平台",
      "domain": "cnSchema:Software",
      "range": "cnSchema:Organization",
      "description": "软件托管的平台或组织（如 GitHub）",
      "source": "extension"
    },

    {
      "id": "kg:relatedRepository",
      "label": "相关仓库",
      "domain": "cnSchema:Software",
      "range": "cnSchema:Software",
      "description": "与该仓库功能或用途相关的其他仓库",
      "source": "extension"
    },

    {
      "id": "kg:applicationDomain",
      "label": "应用领域",
      "domain": "cnSchema:Software",
      "range": "cnSchema:TechTerm",
      "description": "软件的主要应用领域（如机器学习、系统软件等）",
      "source": "extension"
    },

    {
      "id": "kg:hasRelease",
      "label": "版本发布",
      "domain": "cnSchema:Software",
      "range": "kg:SoftwareRelease",
      "description": "软件的版本发布事件",
      "source": "extension",
      "optional": true
    }
  ],

  "attributes": [
    {
      "class": "kg:GitHubRepository",
      "attributes": [
        {
          "name": "name",
          "type": "xsd:string",
          "description": "仓库名称"
        },
        {
          "name": "description",
          "type": "xsd:string",
          "description": "仓库简介"
        },
        {
          "name": "stars",
          "type": "xsd:integer",
          "description": "GitHub Star 数量"
        },
        {
          "name": "url",
          "type": "xsd:string",
          "description": "仓库的 GitHub 链接"
        }
      ]
    },

    {
      "class": "cnSchema:Person",
      "attributes": [
        {
          "name": "name",
          "type": "xsd:string"
        },
        {
          "name": "description",
          "type": "xsd:string"
        }
      ]
    },

    {
      "class": "cnSchema:Organization",
      "attributes": [
        {
          "name": "name",
          "type": "xsd:string"
        },
        {
          "name": "description",
          "type": "xsd:string"
        }
      ]
    }
  ]
}
